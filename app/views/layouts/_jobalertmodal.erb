<div class="modal inmodal fade" id="CreateJobAlert" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Job Alert</h4>

                <p id="flash">Submitted</p>

            </div>

            <div class="modal-body">
                <%= simple_form_for(resource1, :as => resource_name1, :url => job_alerts_path(resource_name1), :remote => true, :html => {:class => 'form-horizontal'}) do |f| %>
                  <div class="form-group">
                    <%= f.label :name, "Related Job" %>
                    <%= f.text_field :job_relate_title, :class => "form-control", :placeholder => "Software, Accountant, etc" %>
                  </div>

                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.text_field :email, :class => "form-control", :placeholder => 'Email' %>
                  </div>

                  <div class="form-group">
                    <%= f.label :freqency %><br>
                    <%= f.select :freqency, ['Weekly','Daily'], {}, {class: "form-control"}%>
                  </div>                                       
            </div>                              
                
            <div class="modal-footer form-group">
                <%= f.submit "Sign up", :class => "btn btn-primary block full-width m-b", :id => "job_alert_tag" %>
                <% end %>
            </div>
        </div>
    </div>
</div>