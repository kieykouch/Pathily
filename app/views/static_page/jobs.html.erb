                            <% end %>
                            <!-- Job Search Result -->
                            <% if @results.count > 0 %>

                                <div class="ibox float-e-margins">
                                    <div class="ibox-content">

                                    <h4> There are <%= @count_all_job %> jobs</h4>
                                    <h4>  </h4>

                                    <% @results.each do |job| %>
                                      
                                        <div class="hr-line-dashed"></div>  
                                        <div class="search-result">
                                            <h3> 
                                                <%= job.job_title %> 
                                            </h3> 

                                            <div class = "search-link"> 
                                                <%= job.company %>  
                                            </div>

                                            <p> <%= job.formatted_location %> </p>
                                            <p> <%= job.snippet %> </p>

                                            <%= link_to "Apply for this job", job.url, :target => "_blank", class: "btn btn-primary btn-xs" %>
